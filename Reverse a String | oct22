import java.util.*;

public class Main{
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        
        String s = sc.nextLine();
        char c;
        String rs="";
        
        for(int i=0;i<s.length();i++){
            c = s.charAt(i);
            rs = c+rs;                      // adds each character in front of the existing string
        }
        
        System.out.println(rs);
    }
}
